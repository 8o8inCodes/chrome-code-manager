{
    "name": "Chrome Code Injector",
    "version": "1.0",
    "description": "Injects code into chrome",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "128": "images/logo128.png"
        }
    },
    "icons": {
        "128": "images/logo128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2
}